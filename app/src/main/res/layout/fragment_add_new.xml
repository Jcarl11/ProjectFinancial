<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentAddNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/addnew_imageview_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_person"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/addnew_field_projectcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code"
            android:background="@drawable/edittext_bg"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:padding="16dp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/addnew_field_projectname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project title"
            android:background="@drawable/edittext_bg"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:padding="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/addnew_field_projectowner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Owner"
            android:background="@drawable/edittext_bg"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efeded"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textSize="12sp"
                android:layout_margin="10dp"/>
            <CheckBox
                android:id="@+id/addnew_checkbox_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/addnew_checkbox_archived"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Archived"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/addnew_checkbox_proposal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proposal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efeded"
            android:layout_marginTop="10dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/addnew_spinner_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_dropdown_max_height="300dp"
            app:ms_dropdown_height="wrap_content"
            app:ms_hint="Services"
            app:ms_arrow_tint="@color/colorPrimary"
            app:ms_hide_arrow="false"
            app:ms_background_color="@color/colorPrimaryLight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/addnew_field_specificservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Services"
            android:visibility="gone"
            android:background="@drawable/edittext_bg"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:padding="16dp"
            android:layout_margin="10dp"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/addnew_spinner_typeofproject"
            app:ms_dropdown_max_height="300dp"
            app:ms_dropdown_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_hint="Type of project"
            app:ms_arrow_tint="@color/colorPrimary"
            app:ms_hide_arrow="false"
            app:ms_background_color="@color/colorPrimaryLight"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/addnew_field_specifictype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:visibility="gone"
            android:background="@drawable/edittext_bg"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:padding="16dp"
            android:layout_margin="10dp"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/addnew_spinner_subcategory"
            app:ms_dropdown_max_height="300dp"
            app:ms_dropdown_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_hint="Subcategory"
            app:ms_arrow_tint="@color/colorPrimary"
            app:ms_hide_arrow="false"
            app:ms_background_color="@color/colorPrimaryLight"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/addnew_field_specificsubcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subcategory"
            android:visibility="gone"
            android:background="@drawable/edittext_bg"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:padding="16dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/addnew_button_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE PROJECT"
            android:layout_margin="20dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</ScrollView>