<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joey Carlo Francisco"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/user_row_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carl11"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/user_row_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/user_row_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joeycarlofrancisco@gmail.com"
                android:textSize="15sp"
                android:autoLink="email"
                android:layout_marginLeft="10dp"
                android:textColor="#5b92ea"
                app:layout_constraintTop_toBottomOf="@+id/user_row_username"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/user_row_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/user_row_email"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/user_row_label_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position:"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_row_verified"/>
            <TextView
                android:id="@+id/user_row_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apprentice"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@+id/user_row_label_position"
                app:layout_constraintTop_toBottomOf="@+id/user_row_verified"/>
            <TextView
                android:id="@+id/user_row_label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_row_label_position"/>

            <TextView
                android:id="@+id/user_row_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/user_row_position"
                app:layout_constraintStart_toEndOf="@+id/user_row_label_status"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>